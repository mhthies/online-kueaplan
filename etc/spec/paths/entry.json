{
  "put": {
    "operationId": "createOrUpdateEntry",
    "summary": "Create or update a KüA plan entry.",
    "parameters": [
      {"$ref": "../components/eventId.json"},
      {
        "name": "entryId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      }
    ],
    "security": [
      {"sessionTokenAuth": []}
    ],
    "requestBody": {
      "content": {
        "application/json": {
          "schema": {"$ref": "../schema/Entry.json"}
        }
      },
      "required": true
    },
    "responses": {
      "201": {
        "description": "Creating the new entry was successful."
      },
      "204": {
        "description": "Updating the entry was successful."
      },
      "400": {"$ref": "../components/badJSONError.json"},
      "403": {"$ref": "../components/authorizationError.json"},
      "404": {
        "description": "The event with given eventId does not exist; so creating/updating an entry there is not possible.",
        "content": {
          "application/json": {
            "schema": {"$ref": "../schema/Error.json"}
          }
        }
      },
      "409": {
        "description": "The entry could not created with this id, because it already exists in another event or has been deleted.",
        "content": {
          "application/json": {
            "schema": {"$ref": "../schema/Error.json"}
          }
        }
      },
      "415": {"$ref": "../components/wrongMediaTypeError.json"},
      "422": {"$ref": "../components/badContentError.json"},
      "500": {"$ref": "../components/serverError.json"}
    }
  },
  "delete": {
    "operationId": "deleteEntry",
    "summary": "Remove a KüA plan entry. It will be marked as deleted in the database.",
    "parameters": [
      {"$ref": "../components/eventId.json"},
      {
        "name": "entryId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      },
      {
        "name": "leaveResidue",
        "in": "query",
        "required": false,
        "schema": {
          "type": "boolean"
        }
      }
    ],
    "security": [
      {"sessionTokenAuth": []}
    ],
    "responses": {
      "204": {
        "description": "Removing the entry (and creating the residue, if requested) was successful."
      },
      "403": {"$ref": "../components/authorizationError.json"},
      "404": {
        "description": "The entry to be deleted does not exist or is not part of the event with given eventId.",
        "content": {
          "application/json": {
            "schema": {"$ref": "../schema/Error.json"}
          }
        }
      },
      "500": {"$ref": "../components/serverError.json"}
    }
  }
}
