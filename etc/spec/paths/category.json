{
  "put": {
    "operationId": "createOrUpdateCategory",
    "summary": "Create or update a category.",
    "parameters": [
      {"$ref": "../components/eventId.json"},
      {"$ref": "../components/sessionToken.json"},
      {
        "name": "categoryId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      }
    ],
    "requestBody": {
      "content": {
        "application/json": {
          "schema": {"$ref": "../schema/Category.json"}
        }
      },
      "required": true
    },
    "responses": {
      "201": {
        "description": "Creating the new category was successful."
      },
      "204": {
        "description": "Updating the category was successful."
      },
      "400": {"$ref": "../components/badJSONError.json"},
      "403": {"$ref": "../components/authorizationError.json"},
      "404": {
        "description": "The event with given eventId does not exist; so creating/updating a category there is not possible.",
        "content": {
          "application/json": {
            "schema": {"$ref": "../schema/Error.json"}
          }
        }
      },
      "415": {"$ref": "../components/wrongMediaTypeError.json"},
      "422": {"$ref": "../components/badContentError.json"},
      "500": {"$ref": "../components/serverError.json"}
    }
  },
  "delete": {
    "operationId": "deleteCategory",
    "summary": "Remove a category from the KÃ¼A plan. It will be removed from the database.",
    "parameters": [
      {"$ref": "../components/eventId.json"},
      {"$ref": "../components/sessionToken.json"},
      {
        "name": "categoryId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      }
    ],
    "responses": {
      "204": {
        "description": "Removing the category was successful."
      },
      "403": {"$ref": "../components/authorizationError.json"},
      "404": {
        "description": "The category to be deleted does not exist or is not part of the event with given eventId.",
        "content": {
          "application/json": {
            "schema": {"$ref": "../schema/Error.json"}
          }
        }
      },
      "409": {
        "description": "Deleting the category was not possible, due to conflicting entries.",
        "content": {
          "application/json": {
            "schema": {"$ref": "../schema/Error.json"}
          }
        }
      },
      "500": {"$ref": "../components/serverError.json"}
    }
  }  
}
