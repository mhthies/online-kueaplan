{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://kuaplan.de/meta/schema/Event.json",
    "title": "KüA Plan Event/Instance",
    "description": "The metadata of the KüA plan's event, i.e. the KüA plan instance",
    "type": "object",

    "properties": {
        "id": {
            "description": "The unique identifier of the event",
            "type": "integer"
        },
        "title": {
            "description": "The name of the event",
            "type": "string"
        },
        "beginDate": {
            "description": "The first day of the event",
            "type": "string",
            "format": "date"
        },
        "endDate": {
            "description": "The first day of the event",
            "type": "string",
            "format": "date"
        }
    },
    "required": ["id", "title", "beginDate", "endDate"]
}
