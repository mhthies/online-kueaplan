{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://kuaplan.de/meta/schema/AuthorizationInfo.json",
    "title": "Authorization Information",
    "description": "List of authorized roles (e.g. of a specific user/client) for the KüA-Plan of a given event.",
    "type": "object",
    "properties": {
        "eventId": {
            "type": "integer",
            "description": "The unique identifier of the KüA plan's event, this authorization info applies to."
        },
        "authorization": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "role": {
                        "type": "string",
                        "enum": ["participant", "orga", "admin", "participant-sharable"]
                    }
                },
                "required": ["role"]
            }
        }
    },
    "required": ["eventId", "authorization"]
}
